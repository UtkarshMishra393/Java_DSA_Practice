class Solution {
    public TreeNode bstFromPreorder(int[] arr) {
        TreeNode root = new TreeNode(arr[0]);
        for(int i=1; i<arr.length; i++){
            TreeNode node = new TreeNode(arr[i]);
            helper(root, node);
        }
        return root;
    }

    public void helper(TreeNode root, TreeNode node){
        if(root==null){
            return;
        }
        if(root.left==null && node.val<root.val){
            root.left = node;
            return;
        }
        if(root.right==null && node.val>root.val){
            root.right = node;
            return;
        }
        if(root.val>node.val) helper(root.left, node);
        else helper(root.right, node);
    }
}
